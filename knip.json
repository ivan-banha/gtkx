{
    "$schema": "https://unpkg.com/knip@5/schema.json",
    "workspaces": {
        "packages/ffi": {
            "project": ["src/**/*.ts", "scripts/**/*.ts"]
        },
        "packages/gir": {
            "project": ["src/**/*.ts"]
        },
        "packages/gtkx": {
            "project": ["src/**/*.ts", "scripts/**/*.ts"]
        },
        "packages/native": {
            "project": ["*.ts"]
        }
    },
    "ignore": ["**/dist/**", "**/node_modules/**", "**/*.d.ts", "**/src/generated/**"],
    "ignoreDependencies": ["@biomejs/biome"],
    "ignoreExportsUsedInFile": true
}
