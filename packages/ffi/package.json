{
    "name": "@gtkx/ffi",
    "version": "0.4.1",
    "description": "Generated TypeScript FFI bindings for GTK4 libraries",
    "keywords": [
        "gtk",
        "gtk4",
        "ffi",
        "bindings",
        "typescript",
        "linux",
        "desktop"
    ],
    "homepage": "https://eugeniodepalo.github.io/gtkx",
    "bugs": {
        "url": "https://github.com/eugeniodepalo/gtkx/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/eugeniodepalo/gtkx.git",
        "directory": "packages/ffi"
    },
    "license": "MPL-2.0",
    "author": "Eugenio Depalo <eugeniodepalo@gmail.com>",
    "type": "module",
    "exports": {
        "./package.json": "./package.json",
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        },
        "./gl": {
            "types": "./dist/gl/index.d.ts",
            "default": "./dist/gl/index.js"
        },
        "./cairo": {
            "types": "./dist/cairo/index.d.ts",
            "default": "./dist/cairo/index.js"
        },
        "./*": {
            "types": "./dist/generated/*/index.d.ts",
            "default": "./dist/generated/*/index.js"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsc -b && cp ../../README.md .",
        "codegen": "tsx scripts/codegen.ts",
        "test": "vitest run"
    },
    "dependencies": {
        "@gtkx/native": "workspace:*"
    },
    "devDependencies": {
        "@gtkx/gir": "workspace:*"
    }
}
