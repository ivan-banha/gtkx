{
    "name": "@gtkx/native",
    "version": "0.4.1",
    "description": "Rust-based native module providing FFI bindings for GTKX",
    "keywords": [
        "gtk",
        "gtk4",
        "react",
        "native",
        "ffi",
        "linux",
        "desktop"
    ],
    "homepage": "https://eugeniodepalo.github.io/gtkx",
    "bugs": {
        "url": "https://github.com/eugeniodepalo/gtkx/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/eugeniodepalo/gtkx.git",
        "directory": "packages/native"
    },
    "license": "MPL-2.0",
    "author": "Eugenio Depalo <eugeniodepalo@gmail.com>",
    "type": "module",
    "exports": {
        "./package.json": "./package.json",
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsc -b && cp index.node dist/ && cp ../../README.md .",
        "native-build": "cargo build --message-format=json-render-diagnostics --release > cargo.log && neon dist < cargo.log",
        "test": "if [ -n \"$CI\" ]; then vitest run; else GDK_BACKEND=x11 xvfb-run -a vitest run; fi"
    },
    "devDependencies": {
        "@neon-rs/cli": "0.1.82"
    }
}
