{
    "name": "@gtkx/react",
    "version": "0.4.1",
    "description": "Build GTK4 desktop applications with React and TypeScript",
    "keywords": [
        "gtk",
        "gtk4",
        "react",
        "typescript",
        "linux",
        "desktop",
        "gui",
        "native"
    ],
    "homepage": "https://eugeniodepalo.github.io/gtkx",
    "bugs": {
        "url": "https://github.com/eugeniodepalo/gtkx/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/eugeniodepalo/gtkx.git",
        "directory": "packages/gtkx"
    },
    "license": "MPL-2.0",
    "author": "Eugenio Depalo <eugeniodepalo@gmail.com>",
    "type": "module",
    "exports": {
        "./package.json": "./package.json",
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsc -b && cp ../../README.md .",
        "codegen": "tsx scripts/codegen.ts",
        "test": "if [ -n \"$CI\" ]; then vitest run; else GDK_BACKEND=x11 xvfb-run -a vitest run; fi"
    },
    "dependencies": {
        "@gtkx/ffi": "workspace:*",
        "react-reconciler": "0.33.0"
    },
    "devDependencies": {
        "@gtkx/gir": "workspace:*"
    },
    "peerDependencies": {
        "react": "^19"
    }
}
